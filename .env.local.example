# Shopify Configuration (CORRECTED SCOPES)
SHOPIFY_API_KEY=your_api_key_from_partner_dashboard
SHOPIFY_API_SECRET=your_api_secret_from_partner_dashboard
SHOPIFY_SCOPES=read_orders,read_customers,read_refunds,write_webhooks
SHOPIFY_APP_URL=http://localhost:3000
SHOPIFY_API_VERSION=2024-01

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# Upstash Redis (for distributed rate limiting - ISSUE #8)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Encryption (GENERATE WITH: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_256_bit_hex_key_here

# Session (GENERATE WITH: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# Application Environment
NODE_ENV=development

# Fraud Detection - Phase 2 (Optional)
# Email notifications for high-severity fraud alerts
FRAUD_ALERT_EMAIL=noreply@yourapp.com

# Slack webhook URL for fraud alert notifications
# Create a webhook in your Slack workspace: https://api.slack.com/messaging/webhooks
FRAUD_ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Security - Phase 3
# Cron job authentication secret (GENERATE WITH: openssl rand -base64 32)
CRON_SECRET=your_cron_secret_for_scheduled_jobs

# Admin dashboard API key (GENERATE WITH: openssl rand -base64 32)
ADMIN_API_KEY=your_admin_api_key_for_security_dashboard

# Cross-store fraud detection feature flag
CROSS_STORE_FRAUD_ENABLED=true

# Salt for hashing customer PII (GENERATE WITH: openssl rand -base64 32)
# CRITICAL: Never change this after first deployment or all hashes will be invalid
SALT_SECRET_KEY=your_salt_for_hashing_customer_data
